$(function() {

    /* 팝업존 */
    $('#popupzone-roll.slide').carousel({
        interval: 7000,
        pause: "hover"
    });

    /* 마우스 클릭 시 anchor 동작 막기 */
    $('.carousel-control').click(function() {
        var carousel_id = $(this).attr('href');
        if ($(this).hasClass('play')) {
            $(carousel_id).carousel('cycle');
            return false;
        }
        else if ($(this).hasClass('pause')) {
            $(carousel_id).carousel('pause');
            return false;
        }
    });

    /* 포커스 이벤트 처리 */
    $('#popupzone-roll a').focus(function() {
        $("#popupzone-roll").carousel('pause');
    }).blur(function() {
        $("#popupzone-roll").carousel('cycle');
    });

    $('#schedule-roll a').focus(function() {
        $("#schedule-roll").carousel('pause');
    }).blur(function() {
        $("#schedule-roll").carousel('cycle');
    });
});